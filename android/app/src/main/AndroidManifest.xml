<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.venom.mushroomapp">

    <application
        android:name=".MushroomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity android:name=".views.MushroomsList.MushroomsListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MushroomDetails.MushroomDetailsActivity" />
        <activity android:name=".views.MushroomCreate.MushroomCreateActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>